{% extends 'layout.twig' %}

{% block content %}
    <!-- Main Content-->
    <div class="container position-relative ">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7 mb-5">
                <h3>Comments to approve</h3>
                <ul class="list-group">

                    {% for comment in comments %}

                        <li class="list-group-item">
                            {{ comment.content }}
                            <div class="d-grid gap-2 d-md-block">
                                <a href="?page=approvecomment&commentid={{ comment.id }}"
                                   class="btn btn-success btn-sm rounded" role="button">Approve</a>
                                <a href="?page=deletecomment&commentid={{ comment.id }}"
                                   class="btn btn-danger btn-sm rounded">Delete</a>
                            </div>

                        </li>
                    {% endfor %}
                </ul>

            </div>
        </div>
    </div>

{% endblock %}