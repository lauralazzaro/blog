{% extends 'layout.twig' %}

{% block content %}
    <!-- Main Content-->
    <div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">
            <!-- Main Content-->
            {% for post in posts %}
                <div class="post-preview">
                    <a href="?page=post&postid={{ post.id }}">
                        <h2 class="post-title">
                            {{ post.title }}
                        </h2>
                        <h3 class="post-subtitle"> {{ post.teaser }}</h3>
                    </a>
                    <p class="post-meta">
                        Posted by {{ post.username }} on {{ post.updated_at  | date('d/m/Y')}}
                    </p>
                    {% if role == 'admin' %}
                    <div class="d-grid gap-2 d-md-block">
                        <a href="?page=updatepost&postid={{ post.id }}"
                           class="btn btn-success btn-sm rounded" role="button">Update</a>
                        <a href="?page=deletepost&postid={{ post.id }}"
                           class="btn btn-danger btn-sm rounded">Delete</a>
                    </div>
                    {% endif %}
                </div>
                <!-- Divider-->
                <hr class="my-4"/>
            {% endfor %}
            <!-- Pager-->
            <div class="d-flex justify-content-end mb-4"><a class="btn btn-primary text-uppercase" href="#!">Older Posts
                    â†’</a></div>
        </div>
    </div>


{% endblock %}